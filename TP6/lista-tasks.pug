extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Descrição
                        th Data de Registo
                        th Prazo
                        th Tipo
                        th Prioridade
                    each task in tasklist
                        tr
                            td= task.desc
                            td= task.reg_date
                            td= task.due_date
                            td= task.type
                            td= task.priority
            footer.w3-container.w3-teal
                address Gerado por TaskApp
                    a(style='float:right' href='/') Voltar à página principal

extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Tarefa Recebida
            .w3-container
                table.w3-table-all
                    tr
                        th Descrição
                        td= task.desc
                    tr
                        th Data de Registo
                        td= task.reg_date
                    tr
                        th Prazo
                        td= task.due_date
                    tr
                        th Tipo
                        td= task.type
                    tr
                        th Prioridade
                        td= task.priority
            footer.w3-container.w3-teal
                address Gerado por TaskApp:
                    a(style='float:right' href='/') Voltar à página principal

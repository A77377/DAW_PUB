extends layout

block content
    header.w3-container.w3-teal
        h3 Upload de um Ficheiro
    form.w3-container.w3-card-4(action='/processaFormSolo' method='POST' enctype='multipart/form-data')
        p
            label.w3-text-teal
                b Ficheiro
            input.w3-input.w3-border.w3-light-grey(type='file' name='ficheiro')
        p
            label.w3-text-teal
                b Descrição
            input.w3-input.w3-border.w3-light-grey(type='text' name='desc' placeholder='Insira uma descrição do ficheiro carregado.')
        p
            input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
    footer.w3-container.w3-teal
        address Gerado por FileUploader
            a(style='float:right' href='/') Página única